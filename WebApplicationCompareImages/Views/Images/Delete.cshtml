@model WebApplicationCompareImages.Models.Image

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimesShown)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimesShown)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimesSelected)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimesSelected)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImageData != null && Model.ImageData.Length > 0)
            {
                var base64 = Convert.ToBase64String(Model.ImageData);
                var imageSrc = $"data:image/png;base64,{base64}";
                <img src="@imageSrc" alt="Image" height="100" />
            }
            else
            {
                <span>No image</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
